@model TestProyecto2.Models.ArticulosCustodia 

@{
    ViewData["Title"] = "Ingresar Articulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container"> <!--Contenedor del formulario para crear un nuevo registro de edificio-->

    <div class="row">
        <div class="col-sm-12">
            <h3>Ingresar Articulo</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="RegistrarIngreso">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                   <label asp-for="CodigoTransportista" class="control-label" ></label>
                   <span asp-validation-for="CodigoTransportista" class="text-danger"></span>
                   <select asp-for="CodigoTransportista" asp-items="@Model.CodigoTransportistaReporte" >
                            <option >Por favor seleccione un codigo de transportista</option> 
                   </select>
                </div>

                 <div class="form-group">
                   <label asp-for="TrackingId" class="control-label" ></label>
                   <input asp-for="TrackingId" class="form-control" />
                   <span asp-validation-for="TrackingId" class="text-danger"></span>
                </div>  

                <div class="form-group">
                   <label asp-for="Descripcion" class="control-label" ></label>
                   <input asp-for="Descripcion" class="form-control" />
                   <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>  

                <div class="form-group">
                   <label asp-for="Peso" class="control-label" ></label>
                   <input asp-for="Peso" class="form-control" />
                   <span asp-validation-for="Peso" class="text-danger"></span>
                </div> 

                <div class="form-group">
                   <label asp-for="Precio" class="control-label" ></label>
                   <input asp-for="Precio" class="form-control" />
                   <span asp-validation-for="Precio" class="text-danger"></span>
                </div> 

                <div class="form-group">
                   <label asp-for="CodigoCliente" class="control-label" ></label>
                   <span asp-validation-for="CodigoCliente" class="text-danger"></span>
                   <select asp-for="CodigoCliente" asp-items="@Model.CodigoClienteReporte" >
                            <option >Por favor seleccione un codigo de cliente</option> 
                   </select>
                </div> 

                <div class="form-group">
                   @Html.LabelFor(model => model.FechaIngreso)   
                    @Html.EditorFor(model => model.FechaIngreso, new { htmlAttributes = new {@class="datepicker"}})  
                    @Html.ValidationMessageFor(model => model.FechaIngreso) 
                </div> 

                <div class="form-group">
                   <label asp-for="Estado" class="control-label" ></label>
                   <input asp-for="Estado" class="form-control" value="Disponible para retiro" readonly/>
                   <span asp-validation-for="Estado" class="text-danger"></span>
                </div> 


                <div class="form-group">
                    <input type="submit" value="Ingresar Articulo" class="btn btn-primary" onclick="return confirm('Esta seguro que desea agregar este articulo?')"/>
                </div>

                <div class="form-group">
                    <input type="button" value="Cancelar" class="btn btn-secondary" onClick="window.location= '@Url.Action( "Index", "Articulo")'" />
                </div>

            </form>
        </div> 
    </div>

</div>

<link href="~/Content/themes/jquery-ui-1.13.2.custom/jquery-ui.min.css" rel="stylesheet" />

<script type="text/javascript">
    var codigos;

    codigos = Math.floor(Math.random() * 99999); 

    window.onload = function () {
                document.getElementById("txt_usrid").value = codigos;
    }
    
</script>

@section Scripts{ <!--toma las validaciones del lado cliente-->

    @{ <partial name="_ValidationScriptsPartial" />}

    <script src="~/Content/themes/jquery-ui-1.13.2.custom/jquery-ui.min.js"></script>

    <script>
        $(function() {
            $(".datepicker").datepicker();
        });
    </script>

}


