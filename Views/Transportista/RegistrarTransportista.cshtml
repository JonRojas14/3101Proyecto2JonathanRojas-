@model TestProyecto2.Models.Transportistas 

@{
    ViewData["Title"] = "Registrar Transportista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container"> <!--Contenedor del formulario para crear un nuevo registro de edificio-->

    <div class="row">
        <div class="col-sm-12">
            <h3>Registrar Transportista</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="RegistrarTransportista">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                   <label asp-for="Código" class="control-label" ></label>
                   <input asp-for="Código" class="form-control" id = "txt_usrid" />
                   <span asp-validation-for="Código" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="NombreEmpresa" class="control-label" ></label>
                   <input asp-for="NombreEmpresa" class="form-control" />
                   <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                </div>  

                <div class="form-group">
                    <input type="submit" value="Registrar Transportista" class="btn btn-primary" />
                </div>

            </form>
        </div> 
    </div>

</div>

<script type="text/javascript">
    var codigos;

    codigos = Math.floor(Math.random() * 999); 

    window.onload = function () {
                document.getElementById("txt_usrid").value = codigos;
    }
    
</script>

@section Scripts{ <!--toma las validaciones del lado cliente-->

    @{ <partial name="_ValidationScriptsPartial" />}

}

