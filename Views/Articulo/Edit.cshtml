@model TestProyecto2.Models.ArticulosCustodia 

@{
    ViewData["Title"] = "Editar estado de Articulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container"> <!--Contenedor del formulario para crear un nuevo registro de edificio-->

    <div class="row">
        <div class="col-sm-12">
            <h3>Editar estado de Articulo</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                   <label asp-for="CodigoTransportista" class="control-label" ></label>
                   <input asp-for="CodigoTransportista" class="form-control" readonly/>
                   <span asp-validation-for="CodigoTransportista" class="text-danger"></span>
                </div>

                 <div class="form-group">
                   <label asp-for="TrackingId" class="control-label" ></label>
                   <input asp-for="TrackingId" class="form-control" readonly/>
                   <span asp-validation-for="TrackingId" class="text-danger"></span>
                </div>  

                <div class="form-group">
                   <label asp-for="Descripcion" class="control-label" ></label>
                   <input asp-for="Descripcion" class="form-control" readonly/>
                   <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>  

                <div class="form-group">
                   <label asp-for="CodigoCliente" class="control-label" ></label>
                   <input asp-for="CodigoCliente" class="form-control" readonly/>
                   <span asp-validation-for="CodigoCliente" class="text-danger"></span>
                </div> 

                <div class="form-group">
                   <label asp-for="FechaIngreso" class="control-label" ></label>
                   <input asp-for="FechaIngreso" class="form-control" readonly/>
                   <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                </div> 

                <div class="form-group">
                   <label asp-for="Estado" class="control-label" ></label>
                   <input asp-for="Estado" class="form-control" value="Retirado" readonly/>
                   <span asp-validation-for="Estado" class="text-danger"></span>
                </div> 

                <div class="form-group">
                    <h3>Esta seguro que desea cambiar el estado del arituclo a "Retirado"?</h3>
                </div>

                <div class="form-group">
                    <input type="submit" value="Cambiar estado de articulo" class="btn btn-primary" />
                </div>

            </form>
        </div> 
    </div>

</div>

<link href="~/Content/themes/jquery-ui-1.13.2.custom/jquery-ui.min.css" rel="stylesheet" />

<script type="text/javascript">
    var codigos;

    codigos = Math.floor(Math.random() * 99999); 

    window.onload = function () {
                document.getElementById("txt_usrid").value = codigos;
    }
    
</script>

@section Scripts{ <!--toma las validaciones del lado cliente-->

    @{ <partial name="_ValidationScriptsPartial" />}

    <script src="~/Content/themes/jquery-ui-1.13.2.custom/jquery-ui.min.js"></script>

    <script>
        $(function() {
            $(".datepicker").datepicker();
        });
    </script>

}


